
var userChoice = prompt("Do you choose rock, paper or scissors?");
if (userChoice !== "rock" || "paper" || "scissors") {
        console.log("Pick up your game and learn how to spell. Plese retry and write 'rock', 'paper' or 'scissors'");
} else {
console.log("User: " + userChoice);
}

var computerChoice = Math.random();
if (computerChoice < 0.34) {
	computerChoice = "rock";
} else if(computerChoice <= 0.67) {
	computerChoice = "paper";
} else {
	computerChoice = "scissors";
} console.log("Computer: " + computerChoice);


var compare = function(choice1, choice2) {
    if (choice1 === choice2) {
        return "The you guys tied try again!";
    }
    else if (choice1 === "rock") {
        if (choice2 === "scissors") {
        return "Rock smashes scissors, you win!!";
        } else {
        return "Paper smothers Rock you lose. Sucker!!!"; }
}
    else if (choice1 === "paper") {
        if (choice2 === "rock") {
        return "paper smothers Rock you kicked the computers butt!!";
        } else {
        return "Schooled again! Even I knew Computer was going to choose scissors"; }
}
    else if (choice1 === "scissors") {
        if (choice2 === "rock") {
        return "Computer got you again dude! Rock smashes scissors and Rock wins";
        } else {
        return "Go you go!! Scissors cut that paper into a ton of pieces"; }
}
}
compare(userChoice, computerChoice) 